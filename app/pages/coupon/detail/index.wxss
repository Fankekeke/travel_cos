.cu-custom{
    position: absolute;
    top: 0px;
    width: 100%;
}
.cu-custom .cu-bar{
    padding-right:inherit;
    background-image:linear-gradient(45deg, #0081ff, #1cbbb4);
}
.box{
    position: absolute;
    top: 64px;
    width: 100%;
}

.cu-card.article>.cu-item {
    padding-bottom:0rpx;
}
.cu-card.article>.cu-item .content {
    padding:0;
}
.cu-card.article>.cu-item .content>.canui-left-box{
    width:240rpx;
    height:6.4em;
    margin-right:20rpx;
    text-align:center;
}
