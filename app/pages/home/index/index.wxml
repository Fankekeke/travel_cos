<!--热门景点-->
<view class="cu-bar bg-white margin-top solid-bottom">
    <view class='action'>
        <text class='icon-title text-green'></text>
        <text>热门景点</text>
    </view>
    <navigator hover-class='none' url="/pages/home/gscenic/index">
        <view class='action' style="font-size: 27rpx;"> 更多 <view class='icon-right'></view> </view>
    </navigator>
</view>
<view class="bg-white" style="padding:0 30rpx;padding-bottom: 20rpx;">
    <view class='nav-list canui-flex-car'>

        <navigator wx:for="{{ scenicInfo }}" open-type="navigate" hover-class='none' url="/pages/shop/goods/details?scenicId={{ item.id }}" class="nav-li canui-yx-url">
            <view class="flex-sub cu-card case shadow-warp bg-white">
                <view class="cu-item shadow">
                    <view class='image'>
                        <image src="http://127.0.0.1:9527/imagesWeb/{{ item.image }}" mode="widthFix"></image>
                    </view>
                    <view class="cu-list menu menu-avatar">
                        <view class="cu-item">
                            <view class='content flex-sub'>
                                <view class='text-grey'>{{ item.name }}</view>
                                <view class='text-gray text-sm flex justify-between'>
                                    {{ item.feature }}
                                </view>
                            </view>
                        </view>
                    </view>
                    <!-- <view class="cu-avatar radius" style="background-image:url(https://image.weilanwl.com/img/square-4.jpg);"></view> -->
                </view>
            </view>
        </navigator>

    </view>
</view>

